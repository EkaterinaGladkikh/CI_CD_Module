pipeline {
    agent any 
    stages {
        stage('install req') { 
            steps {
                sh 'python -m venv /path/to/new/virtual/environment'
                sh 'pip install -r requirements.txt' 
            }
        }
        stage('run tests') { 
            steps {
                sh 'pytest main.py' 
            }
        }
    }
}
